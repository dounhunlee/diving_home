<!-- Slick 초기화 스크립트 -->
<script>
  $(document).ready(function(){
    $('.weather-carousel').slick({
      infinite: true,            // 무한 루프 설정
      slidesToShow: 5,           // 한 번에 3개 아이템을 표시
      slidesToScroll: 1,         // 한 번에 1개씩 스크롤
      autoplay: true,            // 자동 슬라이드 전환
      autoplaySpeed: 3000,       // 3초마다 슬라이드 전환
      dots: false,                // 페이지네이션 점 표시
      arrows: false,              // 좌우 네비게이션 화살표 표시
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 4,     // 화면 크기가 768px 이하일 때 2개씩 표시
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,     // 화면 크기가 480px 이하일 때 1개씩 표시
          }
        }
      ]
    });
  });
</script>
